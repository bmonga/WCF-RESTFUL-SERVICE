  <system.serviceModel>
    <services>
      <service name="VeraitoServices.BookService">
        <endpoint address="" behaviorConfiguration="restbehavior" binding="webHttpBinding" contract="VeraitoServices.IBookService">
          <identity>
            <dns value="localhost" />
